.wrapper_with_padding
    #doc_show
    %h1.title= @doc.title
    %p= simple_format(@doc.content)

    .buttons
        = link_to "Fix Doc", edit_doc_path(@doc), class: "button"
        = link_to "Trash It", doc_path(@doc), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "button"